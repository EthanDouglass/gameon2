<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReturningUserActivity">


    <EditText
        android:id="@+id/PlayerUsername"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="25dp"
        android:background="#D3D3D3"
        android:ems="10"
        android:fontFamily="@font/norwester"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/PlayerPassword"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/PlayerPassword"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="70dp"
        android:background="#D3D3D3"
        android:ems="10"
        android:fontFamily="@font/norwester"
        android:hint="Password"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Back"
        android:fontFamily="@font/norwester"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="237dp"
        android:layout_height="76dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="41dp"
        android:fontFamily="@font/norwester"
        android:text="Login"
        android:textSize="24sp"
        android:background="@drawable/custom_button1"
        app:layout_constraintBottom_toTopOf="@+id/buttonBack"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/returninguseractivityframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="425dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>